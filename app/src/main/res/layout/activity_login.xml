<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:gravity="center">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/formulario_login_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome ou e-mail" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/formulario_login_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:password="true"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/formulario_login_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@color/colorSuccess"
        android:textColor="@color/colorWhite"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp"
        android:layout_gravity="center"
        android:text="OU"
        android:gravity="center_horizontal"
        />

    <Button
        android:id="@+id/formulario_login_facebook_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login com Facebook"
        android:background="@color/colorFacebook"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/formulario_login_twitter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login com Twitter"
        android:background="@color/colorTwitter"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/formulario_login_google_plus_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login com Google+"
        android:background="@color/colorGooglePlus"
        android:textColor="@color/colorWhite"
        />
</LinearLayout>