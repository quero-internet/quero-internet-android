<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GooglePlusActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="55dp">


    <ImageView
        android:src="@drawable/ic_public_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar como Quero Internet!!"
        android:gravity="center_horizontal"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:textSize="18dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="O aplicativo terá acesso ao seu telefone"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Saiba mais"
        android:layout_marginBottom="75dp"/>

    <Button
        android:id="@+id/activity_google_plus_login_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@color/colorGooglePlus"
        android:textColor="@color/colorWhite"
        android:text="Continuar"
        android:layout_marginBottom="35dp"
        />


    <TextView
        android:textSize="15dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Isso não permite que o aplicativo publique no Google +"
        android:gravity="center_horizontal"/>
</LinearLayout>